<% include ../partials/header %>
<div class="container" style="margin-top: 5em;">
    <div>
        <div class="jumbotron">
          <h1>Welcome to the Desserts Social Network!</h1>
          <p>Share your tasty treats with us!</p>
          <a href="/desserts/new" class="btn btn-primary">Add a New Dessert</a><br><br>
          <a href="/">Back</a>
        </div>
    </div>
    <div class="flex-container" style="display: moz-flex; display: ms-flex; display: webkit-flex; display: flex; ms-flex-wrap: wrap; webkit-flex-wrap: wrap; flex-wrap: wrap; display: flex"> 
        <% desserts.forEach(function(stuff) { %>
        <div class="thumbnail flex-item" style="max-width: 300px">
            <img class="img-thumbnail" alt="pic of this dessert" style="min-width: 100px; border:none;" src="<%= stuff.image %>">
                    
            <div class="caption">
                <h4><%= stuff.name %></h4>
            </div>
            <br/>
                    
            <a href="/desserts/<%= stuff.id %>" class="btn btn-primary">More info</a>
        </div>
        <% }); %>
    </div>
</div>
